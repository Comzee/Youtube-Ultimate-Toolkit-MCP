{
  "name": "youtube-mcp",
  "version": "2.2.0",
  "description": "Enhanced MCP server for YouTube - transcripts, metadata, playlists, and multi-language support",
  "main": "dist/index.js",
  "bin": {
    "youtube-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:remote": "node dist/index.js --remote --port 3010",
    "dev": "tsc && node dist/index.js",
    "dev:remote": "tsc && node dist/index.js --remote --port 3010"
  },
  "keywords": [
    "mcp",
    "youtube",
    "transcripts",
    "claude",
    "ai"
  ],
  "author": "Comzee",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "bcrypt": "^6.0.0",
    "express": "^5.2.1",
    "googleapis": "^170.1.0",
    "rimraf": "^5.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.6",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
